<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="top">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">50dp</item>
       <item name="android:background">@color/blue</item>
       <item name="android:gravity">center </item>
       <item name="android:textSize">18sp</item>
    </style>
    <!--手机防盗模块的向导“下一步”-->
    <style name="btnNext">
        <item name="android:onClick">doClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:gravity">center </item>
        <item name="android:textSize">19sp</item>
        <item name="android:text">下一步</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
    </style>

    <!--手机防盗模块的向导“上一步”-->
    <style name="btnTop">
        <item name="android:onClick">doClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:gravity">center </item>
        <item name="android:textSize">19sp</item>
        <item name="android:text">上一步</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
    </style>
</resources>
